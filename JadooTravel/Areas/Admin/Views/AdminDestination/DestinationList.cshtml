@model List<ResultDestinationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">

        <div class="row mb-4 align-items-center">
            <div class="col-6">
                <h3 class="fw-bold"><i class="ti ti-list-details me-2"></i> Mevcut Tur Listesi</h3>
            </div>
            <div class="col-6 text-end">
                <a href="/Admin/AdminDestination/CreateDestination/" class="btn btn-primary btn-sm">
                    <i class="ti ti-plus me-1"></i> Yeni Tur Ekle
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">

                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 5%;">#</th> 
                                        <th>Tur Rotası</th>
                                        <th>Fiyat / Gün-Gece</th>
                                        <th class="text-center" style="width: 10%;">Kapasite</th>
                                        <th class="text-center" style="width: 15%;">İşlemler</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.DestinationId.Substring(0, 5)...</th> 
                                            
                                            <td>
                                                <h6 class="mb-0 fw-semibold">@item.CityCountry</h6>
                                                <span class="text-muted small">@item.DayNight</span>
                                            </td>
                                            
                                            <td>
                                                <span class="badge bg-success-subtle text-success fw-semibold">
                                                    @item.Price ₺
                                                </span>
                                            </td>

                                            <td class="text-center">
                                                <span class="badge bg-warning-subtle text-warning fw-semibold">
                                                    @item.Capacity Kişi
                                                </span>
                                            </td>

                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="/Admin/AdminDestination/UpdateDestination/@item.DestinationId"
                                                       class="btn btn-outline-info btn-sm" 
                                                       title="Güncelle">
                                                        <i class="ti ti-edit"></i>
                                                    </a>
                                                    <a href="/Admin/AdminDestination/DeleteDestination/@item.DestinationId"
                                                       class="btn btn-outline-danger btn-sm" 
                                                       title="Sil" 
                                                       onclick="return confirm('Bu turu silmek istediğinizden emin misiniz?');">
                                                        <i class="ti ti-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

