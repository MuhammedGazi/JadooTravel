@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">

        <div class="row mb-4 align-items-center">
            <div class="col-6">
                <h3 class="fw-bold"><i class="ti ti-list-details me-2"></i> Özellik Yönetimi</h3>
            </div>
            <div class="col-6 text-end">
                <a href="/Admin/AdminFeature/CreateFeature" class="btn btn-primary btn-sm">
                    <i class="ti ti-plus me-1"></i> Yeni Özellik Ekle
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">

                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 5%;">#</th>
                                        <th style="width: 20%;">Ana Başlık</th>
                                        <th style="width: 20%;">Özellik Başlığı</th>
                                        <th>Açıklama</th>
                                        <th class="text-center" style="width: 15%;">Video URL</th>
                                        <th class="text-center" style="width: 15%;">İşlemler</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.FeatureId.Substring(0, 5)...</th>

                                            <td><span class="badge bg-info-subtle text-info fw-semibold">@item.MainTitle</span></td>

                                            <td><h6 class="mb-0 fw-semibold">@item.Title</h6></td>

                                            <td>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>

                                            <td class="text-center">
                                                @if (!string.IsNullOrEmpty(item.VideoUrl))
                                                {
                                                    <a href="@item.VideoUrl" target="_blank" class="btn btn-sm btn-outline-secondary">
                                                        <i class="ti ti-brand-youtube"></i> İzle
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted small">Yok</span>
                                                }
                                            </td>

                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="/Admin/AdminFeature/UpdateFeature/@item.FeatureId"
                                                       class="btn btn-outline-info btn-sm"
                                                       title="Güncelle">
                                                        <i class="ti ti-edit"></i>
                                                    </a>
                                                    <a href="/Admin/AdminFeature/DeleteFeature/@item.FeatureId"
                                                       class="btn btn-outline-danger btn-sm"
                                                       title="Sil"
                                                       onclick="return confirm('Bu özelliği silmek istediğinizden emin misiniz?');">
                                                        <i class="ti ti-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

