@model GetFeatureByIdDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12 mb-4">
                <h3 class="fw-bold">Özellik Güncelle</h3>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">

                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="ti ti-edit me-2"></i> Özellik Detaylarını Düzenle</h5>
                    </div>

                    <div class="card-body">

                        <form method="post" asp-action="UpdateFeature" asp-controller="AdminFeature" asp-route-id="@Model.FeatureId">

                            <input type="hidden" asp-for="FeatureId" />

                            <div class="mb-3">
                                <label asp-for="MainTitle" class="form-label">Ana Başlık (Section Başlığı):</label>
                                <input type="text" asp-for="MainTitle" class="form-control" placeholder="Ana Başlık" required />
                            </div>

                            <div class="mb-3">
                                <label asp-for="Title" class="form-label">Özellik Başlığı (Kısa Başlık):</label>
                                <input type="text" asp-for="Title" class="form-control" placeholder="Özellik Başlığı" required />
                            </div>

                            <div class="mb-3">
                                <label asp-for="VideoUrl" class="form-label">Video URL:</label>
                                <input type="url" asp-for="VideoUrl" class="form-control" placeholder="Video URL" />
                            </div>

                            <div class="mb-4">
                                <label asp-for="Description" class="form-label">Açıklama Metni:</label>
                                <textarea asp-for="Description" rows="5" class="form-control" placeholder="Açıklama" required></textarea>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="ti ti-rotate-clockwise-2 me-2"></i> Özelliği Güncelle
                                </button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

