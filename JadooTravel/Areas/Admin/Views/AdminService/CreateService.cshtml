@model CreateServiceDto
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12 mb-4">
                <h3 class="fw-bold">Yeni Hizmet Ekle</h3>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">

                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="ti ti-plug me-2"></i> Yeni Hizmet Bilgileri Girişi</h5>
                    </div>

                    <div class="card-body">

                        <form method="post" asp-action="CreateService" asp-controller="AdminService">

                            <div class="mb-3">
                                <label asp-for="Title" class="form-label">Hizmet Başlığı:</label>
                                <input type="text" asp-for="Title" class="form-control" placeholder="Örn: Online Destek" required />
                            </div>

                            <div class="mb-3">
                                <label asp-for="IconUrl" class="form-label">İkon URL'si:</label>
                                <input type="text" asp-for="IconUrl" class="form-control" placeholder="Örn: /assets/icons/support.svg veya bir font ikon sınıfı" />
                            </div>

                            <div class="mb-4">
                                <label asp-for="Description" class="form-label">Açıklama Metni:</label>
                                <textarea asp-for="Description" rows="5" class="form-control" placeholder="Hizmetin detaylı açıklamasını giriniz." required></textarea>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="ti ti-circle-plus me-2"></i> Hizmeti Ekle
                                </button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

