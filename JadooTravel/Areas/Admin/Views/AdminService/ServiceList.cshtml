@model List<ResultServiceDto>
@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">

        <div class="row mb-4 align-items-center">
            <div class="col-6">
                <h3 class="fw-bold"><i class="ti ti-hand-rock me-2"></i> Hizmet (Servis) Yönetimi</h3>
            </div>
            <div class="col-6 text-end">
                <a href="/Admin/AdminService/CreateService" class="btn btn-primary btn-sm">
                    <i class="ti ti-plus me-1"></i> Yeni Hizmet Ekle
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">

                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 5%;">#</th>
                                        <th style="width: 10%;">İkon</th>
                                        <th style="width: 20%;">Başlık</th>
                                        <th>Açıklama</th>
                                        <th class="text-center" style="width: 15%;">İşlemler</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.ServiceId.Substring(0, 5)...</th>

                                            <td>
                                                <img src="@item.IconUrl" alt="İkon" width="30" height="30" onerror="this.onerror=null;this.src='/path/to/default/icon.png';" class="rounded-circle" />
                                            </td>

                                            <td><h6 class="mb-0 fw-semibold">@item.Title</h6></td>

                                            <td>
                                                <p class="mb-0 small">
                                                    @(item.Description.Length > 70 ? item.Description.Substring(0, 70) + "..." : item.Description)
                                                </p>
                                            </td>

                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="/Admin/AdminService/UpdateService/@item.ServiceId"
                                                       class="btn btn-outline-info btn-sm"
                                                       title="Güncelle">
                                                        <i class="ti ti-edit"></i>
                                                    </a>
                                                    <a href="/Admin/AdminService/DeleteService/@item.ServiceId"
                                                       class="btn btn-outline-danger btn-sm"
                                                       title="Sil"
                                                       onclick="return confirm('@item.Title hizmetini silmek istediğinizden emin misiniz?');">
                                                        <i class="ti ti-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

