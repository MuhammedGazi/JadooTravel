@model GetServiceByIdDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12 mb-4">
                <h3 class="fw-bold">Hizmet Güncelle</h3>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">

                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="ti ti-edit me-2"></i> Hizmet Detaylarını Düzenle</h5>
                    </div>

                    <div class="card-body">

                        <form method="post" asp-action="UpdateService" asp-controller="AdminService" asp-route-id="@Model.ServiceId">

                            <input type="hidden" asp-for="ServiceId" />

                            <div class="mb-3">
                                <label asp-for="Title" class="form-label">Hizmet Başlığı:</label>
                                <input type="text" asp-for="Title" class="form-control" placeholder="Hizmet Başlığı" required />
                            </div>

                            <div class="mb-3">
                                <label asp-for="IconUrl" class="form-label">İkon URL'si:</label>
                                <input type="text" asp-for="IconUrl" class="form-control" placeholder="İkon URL'si" />
                            </div>

                            <div class="mb-4">
                                <label asp-for="Description" class="form-label">Açıklama Metni:</label>
                                <textarea asp-for="Description" rows="5" class="form-control" placeholder="Açıklama" required></textarea>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="ti ti-rotate-clockwise-2 me-2"></i> Hizmeti Güncelle
                                </button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

