@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12 mb-4">
                <h3 class="fw-bold">Yeni Referans Ekle</h3>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">

                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="ti ti-user-plus me-2"></i> Yeni Müşteri Referansı Girişi</h5>
                    </div>

                    <div class="card-body">

                        <form method="post" asp-action="CreateTestimonial" asp-controller="AdminTestimonial">

                            <div class="mb-3">
                                <label asp-for="NameSurname" class="form-label">Müşteri Adı Soyadı:</label>
                                <input type="text" asp-for="NameSurname" class="form-control" placeholder="Örn: Ayşe Yılmaz" required />
                            </div>

                            <div class="mb-3">
                                <label asp-for="CityCountry" class="form-label">Şehir / Ülke:</label>
                                <input type="text" asp-for="CityCountry" class="form-control" placeholder="Örn: İstanbul, Türkiye" required />
                            </div>

                            <div class="mb-3">
                                <label asp-for="ImageUrl" class="form-label">Müşteri Fotoğraf URL'si:</label>
                                <input type="url" asp-for="ImageUrl" class="form-control" placeholder="Örn: https://example.com/avatar.jpg" />
                            </div>

                            <div class="mb-4">
                                <label asp-for="Comment" class="form-label">Yorum Metni:</label>
                                <textarea asp-for="Comment" rows="5" class="form-control" placeholder="Müşterinin yorumunu buraya giriniz." required></textarea>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="ti ti-circle-plus me-2"></i> Referansı Ekle
                                </button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

