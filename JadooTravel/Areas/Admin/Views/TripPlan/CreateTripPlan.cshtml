@model CreateTripPlanDto
@{
    ViewData["Title"] = "CreateTripPlan";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12 mb-4">
                <h3 class="fw-bold">Yeni Seyahat Planı Ekleme</h3>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">

                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="ti ti-map-2 me-2"></i> Yeni Plan Girişi</h5>
                    </div>

                    <div class="card-body">

                        <form method="post" asp-action="CreateTripPlan" asp-controller="TripPlan" asp-area="Admin">

                            <div class="mb-3">
                                <label asp-for="Title" class="form-label">Plan Başlığı:</label>
                                <input type="text" asp-for="Title" class="form-control" placeholder="Örn: En İyi Turlar" required />
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Plan Açıklaması:</label>
                                <textarea asp-for="Description" rows="5" class="form-control" placeholder="Planın detaylı açıklamasını giriniz." required></textarea>
                            </div>

                            <div class="mb-4">
                                <label asp-for="IconUrl" class="form-label">İkon CSS Sınıfı:</label>
                                <input type="text" asp-for="IconUrl" class="form-control" placeholder="Örn: fas fa-plane-departure" required />
                                <small class="form-text text-muted">Lütfen Font Awesome veya benzeri bir kütüphaneden CSS sınıfı giriniz.</small>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="/Admin/TripPlan/TripPlanList" class="btn btn-secondary">
                                    <i class="ti ti-arrow-back me-2"></i> Listeye Geri Dön
                                </a>
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="ti ti-circle-plus me-2"></i> Planı Kaydet
                                </button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



