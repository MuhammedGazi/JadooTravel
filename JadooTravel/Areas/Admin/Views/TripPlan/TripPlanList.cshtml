@model List<ResultTripPlanDto>
@{
    ViewData["Title"] = "TripPlanList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12 mb-4">
                <h3 class="fw-bold">Seyahat Planları Yönetimi</h3>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="ti ti-list me-2"></i> Tüm Seyahat Planları</h5>
            </div>

            <div class="card-body">

                <a href="/Admin/TripPlan/CreateTripPlan" class="btn btn-success mb-3">
                    <i class="ti ti-circle-plus me-2"></i> Yeni Plan Ekle
                </a>

                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Açıklama (Kısa)</th>
                                <th>İkon</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                int count = 0;
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@(item.Description.Length > 70 ? item.Description.Substring(0, 70) + "..." : item.Description)</td>
                                        <td><i class="@item.IconUrl fa-lg me-2"></i> (@item.IconUrl)</td>
                                        <td>
                                            <a href="/Admin/TripPlan/UpdateTripPlan/@item.TripPlanId" class="btn btn-warning btn-sm me-2">
                                                <i class="ti ti-edit"></i> Güncelle
                                            </a>
                                            <a href="/Admin/TripPlan/DeleteTripPlan/@item.TripPlanId" class="btn btn-danger btn-sm"
                                               onclick="return confirm('Bu seyahat planını silmek istediğinizden emin misiniz?');">
                                                <i class="ti ti-trash"></i> Sil
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted">Henüz kayıtlı bir seyahat planı bulunmamaktadır.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>



