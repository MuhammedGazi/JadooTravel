@model GetTripPlanByIdDto
@{
    ViewData["Title"] = "UpdateTripPlan";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="body-wrapper">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12 mb-4">
                <h3 class="fw-bold">Seyahat Planı Güncelleme</h3>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">

                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0"><i class="ti ti-edit me-2"></i> Plan Düzenleme Formu</h5>
                    </div>

                    <div class="card-body">

                        <form method="post" asp-action="UpdateTripPlan" asp-controller="TripPlan" asp-area="Admin">

                            <input type="hidden" asp-for="TripPlanId" />

                            <!-- Başlık Alanı -->
                            <div class="mb-3">
                                <label asp-for="Title" class="form-label">Plan Başlığı:</label>
                                <input type="text" asp-for="Title" class="form-control" required />
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Plan Açıklaması:</label>
                                <textarea asp-for="Description" rows="5" class="form-control" required></textarea>
                            </div>

                            <div class="mb-4">
                                <label asp-for="IconUrl" class="form-label">İkon CSS Sınıfı:</label>
                                <input type="text" asp-for="IconUrl" class="form-control" required />
                                <small class="form-text text-muted">
                                    Mevcut İkon: @if (!string.IsNullOrEmpty(Model.IconUrl))
                                    {
                                        <i class="@Model.IconUrl fa-lg"></i>
                                    }
                                    else
                                    {
                                        <span>(İkon Yok)</span>
                                    }
                                </small>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="/Admin/TripPlan/TripPlanList" class="btn btn-secondary">
                                    <i class="ti ti-arrow-back me-2"></i> Listeye Geri Dön
                                </a>
                                <button type="submit" class="btn btn-warning btn-lg">
                                    <i class="ti ti-refresh me-2"></i> Güncellemeyi Kaydet
                                </button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


