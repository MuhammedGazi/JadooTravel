@model List<ResultCategoryDto>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <th>@item.CategoryId</th>
                <th>@item.CategoryName</th>
                <th><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></th>
                <th><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-success">Güncelle</a></th>
            </tr>
        }
    </table>
    <a href="/Category/CreateCategory/" class="btn btn-info">Yeni Kategori Girişi</a>
</div>
