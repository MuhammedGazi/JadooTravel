@model List<GetReservationWithDestination>
@*
   _AdminDashboardLastCustomerComponentPartial
*@
<div class="row">
    <div class="col-12 d-flex align-items-stretch">
        <div class="card w-100 shadow-sm">
            <div class="card-body p-4">

                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold"><i class="ti ti-receipt me-2"></i> Son Rezervasyonlar</h5>
                </div>

                <div class="table-responsive" data-simplebar>
                    <table class="table table-borderless align-middle text-nowrap">
                        <thead>
                            <tr>
                                <th scope="col">Müşteri / İletişim</th>
                                <th scope="col">Tur Adı / Süre</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Durum (Varsayılan)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="me-4">
                                                    <i class="ti ti-user-circle" style="font-size: 50px; color: #5D87FF;"></i>
                                                </div>

                                                <div>
                                                    <h6 class="mb-1 fw-bolder">@item.NameSurname</h6>
                                                    <p class="fs-3 mb-0 text-muted">@item.Email | @item.Phone</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <h6 class="fs-4 fw-normal mb-1">@item.CityCountry</h6>
                                            <p class="fs-3 mb-0 text-muted">@item.DayNight</p>
                                        </td>
                                        <td>
                                            <h6 class="fs-4 fw-normal mb-0 text-primary">@item.Price.ToString("C2")</h6>
                                        </td>
                                        <td>
                                            @{
                                                string statusText = "Yeni Rezervasyon";
                                                string badgeClass = "bg-light-success text-success";
                                                if (item.ReservationId.EndsWith("5") || item.ReservationId.EndsWith("0"))
                                                {
                                                    statusText = "Beklemede";
                                                    badgeClass = "bg-light-warning text-warning";
                                                }
                                            }
                                            <span class="badge @badgeClass rounded-pill px-3 py-2 fs-3">@statusText</span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-5">
                                        <i class="ti ti-folder-off me-2"></i> Henüz bir rezervasyon kaydı bulunmamaktadır.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>