@model BookingViewModel
@*
    _DefaultBookingStepsComponentPartial
*@
@{
    var turlar = (List<SelectListItem>)ViewBag.turlar;
}
<section id="booking">

    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="mb-4 text-start">
                    <h5 class="text-secondary">@_localization.Getkey("BookingTitle").Value</h5>
                    <h3 class="fs-xl-10 fs-lg-8 fs-7 fw-bold font-cursive text-capitalize">@_localization.Getkey("TriSteps").Value</h3>
                </div>
                @foreach (var item in Model.TripPlanDto)
                {
                    <div class="d-flex align-items-start mb-5">
                        <div class="bg-primary me-sm-4 me-3 p-3" style="border-radius: 13px"> <img src="@item.IconUrl" width="22" alt="steps" /></div>
                        <div class="flex-1">
                            <h5 class="text-secondary fw-bold fs-0">@item.Title</h5>
                            <p>@item.Description</p>
                        </div>
                    </div>
                }


			</div>
            <div class="col-lg-6 d-flex justify-content-center align-items-center mb-4">
                <div class="card shadow-lg border-info w-100" style="max-width: 500px;">
                    <div class="card-header bg-info text-white text-center">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-check-fill me-2"></i>
                            @_localization.Getkey("TourReservationForm").Value
                        </h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Reservation" asp-action="CreateReservation">
                            <div class="mb-3">
                                <label for="adSoyad" class="form-label visually-hidden">
                                    @_localization.Getkey("NameSurname").Value
                                </label>
                                <input type="text" id="adSoyad" name="NameSurname" class="form-control"
                                       placeholder="@_localization.Getkey("NameSurname").Value" required />
                            </div>

                            <div class="mb-3">
                                <label for="telefon" class="form-label visually-hidden">
                                    @_localization.Getkey("PhoneNumber").Value
                                </label>
                                <input type="text" id="telefon" name="Phone" class="form-control"
                                       placeholder="@_localization.Getkey("PhoneNumber").Value" required />
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label visually-hidden">
                                    @_localization.Getkey("EmailAddress").Value
                                </label>
                                <input type="text" id="email" name="Email" class="form-control"
                                       placeholder="@_localization.Getkey("EmailAddress").Value" required />
                            </div>

                            <div class="mb-3">
                                <label for="turSecimi" class="form-label fw-bold">
                                    @_localization.Getkey("SelectTour").Value
                                </label>
                                <select id="turSecimi" name="DestinationId" class="form-select"
                                        required asp-for="@Model.ReservationDestination.DestinationId"
                                        asp-items="turlar">
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="aciklama" class="form-label fw-bold">
                                    @_localization.Getkey("AdditionalRequests").Value
                                </label>
                                <textarea id="aciklama" name="Description" rows="3" class="form-control"
                                          placeholder="@_localization.Getkey("SpecialRequestsPlaceholder").Value"></textarea>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-info btn-lg">
                                    <i class="bi bi-send-fill me-2"></i>
                                    @_localization.Getkey("SubmitReservation").Value
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-muted text-center">
                        @_localization.Getkey("FooterNote").Value
                    </div>
                </div>
            </div>
		</div>
	</div><!-- end of .container-->

</section>